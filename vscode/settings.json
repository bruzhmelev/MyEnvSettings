{
  "git.autofetch": true,
  "window.zoomLevel": 0,
  "numberedBookmarks.navigateThroughAllFiles": "replace",
  "git.confirmSync": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  // для удобного переименования свойств объектов при наличии деструктуризации https://github.com/Microsoft/TypeScript/issues/29238#issuecomment-494866713
  "javascript.preferences.renameShorthandProperties": false,
  "typescript.preferences.renameShorthandProperties": false
}
